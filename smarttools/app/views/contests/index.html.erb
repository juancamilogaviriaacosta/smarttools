<p id="notice"><%= notice %></p>

<h1>Lista de concursos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Banner</th>
      <th>Url</th>
      <th>Descripcion</th>
      <th>Premio</th>
      <th>Fechainicio</th>
      <th>Fechafin</th>
      <th>Administrator</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @contests.each do |contest| %>
      <tr>
        <td><%= contest.nombre %></td>
        <td><img src="<%= contest.banner %>" width=100 height=50/></td>
        <td><%= contest.url %></td>
        <td><%= contest.descripcion %></td>
        <td><%= contest.premio %></td>
        <td><%= contest.fechainicio %></td>
        <td><%= contest.fechafin %></td>
        <td><%= contest.administrator %></td>
        <td><%= link_to 'Show', contest %></td>
        <td><%= link_to 'Edit', edit_contest_path(contest) %></td>
        <td><%= link_to 'Destroy', contest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

