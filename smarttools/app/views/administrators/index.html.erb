<p id="notice"><%= notice %></p>

<h1>Lista de administradores</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Correo</th>
      <th>Contrasena</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @administrators.each do |administrator| %>
      <tr>
        <td><%= administrator.nombre %></td>
        <td><%= administrator.apellido %></td>
        <td><%= administrator.correo %></td>
        <td><%= administrator.contrasena %></td>
        <td><%= link_to 'Ver', administrator %></td>
        <td><%= link_to 'Editar', edit_administrator_path(administrator) %></td>
        <td><%= link_to 'Borrar', administrator, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

